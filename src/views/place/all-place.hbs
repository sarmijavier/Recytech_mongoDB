<div class="row">
    {{#each places}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justidy-content-between aling-items-center">
                    {{place_name}} <a href="/place/edit/{{_id}}"> <i class="fa fa-pencil ml-3" aria-hidden="true"></i></a>
                </h4>
                <p>{{phone_number}}</p>
                <p>{{description}}</p>
                <p>{{address}}</p>                             
                <form action="/place/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" id="_method" value="DELETE">
                    <button class="btn btn-danger btn-block btn-sm">
                        Eliminar
                    </button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</div>