<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Añadir Punto De Reciclaje</h3>
        </div>
        <div class="card-body">
            <form action="/place/new-place" method="POST">
                <div class="form-group">
                    <input type="text" name="place_name" class="form-control " placeholder="Nombre del punto" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="address" placeholder="Direccion" class="form-control"> </input>
                </div>
                <div class="form-group">
                    <input type="text" name="phone_number" placeholder="Celular" class="form-control"> </input>
                </div>
                <div class="form-group">
                    <textarea type="text" name="description" placeholder="Descripcion" class="form-control"> </textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        AÑADIR :)
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>