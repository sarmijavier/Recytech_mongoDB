<div class="col-md4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Punto De Reciclaje</h3>
        </div>
        <div class="card-body">
            <form action="/place/edit/{{place._id}}?_method=PUT" method="POST">
                <input type="hidden" id="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="place_name" class="form-control" value="{{place.place_name}}">
                </div>

                <div class="form-group">
                    <input type="text" name="address" class="form-control" value="{{place.address}}">
                </div>

                <div class="form-group">
                    <input type="text" name="phone_number" class="form-control" value="{{place.phone_number }}">
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control">{{place.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>